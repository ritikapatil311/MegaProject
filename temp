<?php
// Database connection
$mysqli = new mysqli('localhost', 'root', '', 'rc');

// Check if the connection was successful
if ($mysqli->connect_errno) {
    echo 'Failed to connect to MySQL: ' . $mysqli->connect_error;
    exit();
}

// Fetch post data
$result = $mysqli->query('SELECT COUNT(*) AS total_posts, user_id FROM posts GROUP BY user_id');
if ($result->num_rows > 0) {
    $userLabels = [];
    $postCounts = [];
    while ($row = $result->fetch_assoc()) {
        $userId = $row['user_id'];
        $postCount = $row['total_posts'];

        // Retrieve user details for the label
        $userResult = $mysqli->query("SELECT name FROM users WHERE uid = $userId");
        if ($userResult && $userRow = $userResult->fetch_assoc()) {
            $userLabels[] = $userRow['name'];
        } else {
            $userLabels[] = 'Unknown User';
        }

        $postCounts[] = $postCount;
    }
}

// Close database connection
$mysqli->close();
?>

<!DOCTYPE html>
<html>
<head>
    <title>Post Dashboard</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        .container {
            max-width: 600px;
            margin: 0 auto;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Post Dashboard</h2>
        <canvas id="postChart"></canvas>
    </div>

    <script>
        // Create the pie chart
        var ctx = document.getElementById('postChart').getContext('2d');
        var postChart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: <?php echo json_encode($userLabels); ?>,
                datasets: [{
                    data: <?php echo json_encode($postCounts); ?>,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.7)',
                        'rgba(54, 162, 235, 0.7)',
                        'rgba(255, 206, 86, 0.7)',
                        'rgba(75, 192, 192, 0.7)',
                        'rgba(153, 102, 255, 0.7)',
                        'rgba(255, 159, 64, 0.7)',
                    ],
                }]
            },
            options: {
                responsive: true,
                legend: {
                    position: 'bottom',
                },
            }
        });
    </script>
</body>
</html>
